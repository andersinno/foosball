{% macro bootstrap_paginator(page_obj) %}
    {% if page_obj %}
        <nav>
            <ul class="pagination">

                {% if page_obj.has_previous() %}
                    <li><a href="?page={{ page_obj.previous_page_number() }}">
                        {% else %}
                    <li class="disabled"><a href="#">
                {%- endif -%}

                &laquo;</a></li>
                {% for pageno in range(1, page_obj.paginator.num_pages + 1) -%}
                    {%- if pageno == 1 or pageno == page_obj.paginator.num_pages or (pageno - page_obj.number)|abs <= 5 or pageno % 10 == 0 %}
                        <li><a href="?page={{ pageno }}">{% if pageno == page_obj.number %}
                            <b>{{ pageno }}</b>{% else %}{{ pageno }}{% endif %}</a></li>
                    {% endif %}
                {% endfor %}

                {% if page_obj.has_next() %}
                    <li><a href="?page={{ page_obj.next_page_number() }}">
                        {% else %}
                    <li class="disabled"><a href="#">
                {%- endif -%}

                &raquo;</a></li>
            </ul>
        </nav>
    {% endif %}
{% endmacro %}
